<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="24dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartaoDetalhesConquista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/background_dark">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="600dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Cabeçalho Ajustado -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toStartOf="@+id/tvRaridadeConquistaDetalhes"
                        android:text="📋 DETALHES DA CONQUISTA"
                        android:textColor="@color/primary_green"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvRaridadeConquistaDetalhes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/badge_raridade_background"
                        android:text="COMUM"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:padding="6dp"
                        android:paddingHorizontal="10dp" />

                </RelativeLayout>

                <!-- Ícone e Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <FrameLayout
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/circle_white">

                        <ImageView
                            android:id="@+id/ivIconeConquistaDetalhes"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_trophy_24"
                            android:scaleType="centerCrop" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="4dp">

                            <ImageView
                                android:id="@+id/ivStatusConquista"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/baseline_trophy_24" />

                            <TextView
                                android:id="@+id/tvStatusConquista"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="✅ DESBLOQUEADA"
                                android:textColor="@color/primary_green"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvCategoriaConquistaDetalhes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Categoria"
                            android:textColor="@color/text_gray"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Título e Descrição -->
                <TextView
                    android:id="@+id/tvTituloConquistaDetalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Título da Conquista"
                    android:textColor="@color/text_white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDescricaoConquistaDetalhes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Descrição da conquista"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.2" />

                <!-- Progresso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Progresso"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ProgressBar
                            android:id="@+id/progressBarConquistaDetalhes"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            android:max="100"
                            android:progress="50"
                            android:progressTint="@color/primary_green"
                            android:progressBackgroundTint="@color/text_gray" />

                        <TextView
                            android:id="@+id/tvProgressoConquistaDetalhes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50%"
                            android:textColor="@color/text_white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:minWidth="40dp"
                            android:gravity="center" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDescricaoProgressoDetalhes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Progresso: 50% (500/1000)"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Requisitos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 Requisitos"
                        android:textColor="@color/text_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvRequisitosConquista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dar 1000 passos no total"
                        android:textColor="@color/text_gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDicasConquista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Dica: Caminhe regularmente para acumular passos"
                        android:textColor="@color/primary_green"
                        android:textSize="13sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <!-- Recompensa -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/badge_raridade_background"
                    android:padding="12dp"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/baseline_star_24"
                        app:tint="@color/black" />

                    <TextView
                        android:id="@+id/tvPontosConquistaDetalhes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 pontos"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Botões -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Botão Marcar como Visualizada (só aparece quando necessário) -->
                    <Button
                        android:id="@+id/btnMarcarVisualizada"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/primary_green"
                        android:text="✅ Marcar como Visualizada"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:visibility="gone" />

                    <!-- Botões Principais -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnCompartilharDetalhes"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:backgroundTint="@color/primary_green"
                            android:text="📤 Compartilhar"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />

                        <Button
                            android:id="@+id/btnFecharDetalhes"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:backgroundTint="@color/button_gray"
                            android:text="❌ Fechar"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</FrameLayout>