<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="32dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cartaoConquista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/background_dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- CabeÃ§alho -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="ðŸŽ‰ CONQUISTA DESBLOQUEADA!"
                    android:textColor="@color/primary_green"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvBadgeRaridade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/badge_raridade_background"
                    android:text="COMUM"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:padding="6dp"
                    android:paddingHorizontal="10dp" />

            </RelativeLayout>

            <!-- Ãcone da Conquista -->
            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/circle_white">

                <ImageView
                    android:id="@+id/ivIconeConquista"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_trophy_24"
                    android:scaleType="centerCrop" />

                <!-- Efeito de brilho -->
                <TextView
                    android:id="@+id/tvBrilhoEfeito"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_white"
                    android:alpha="0" />

            </FrameLayout>

            <!-- InformaÃ§Ãµes da Conquista -->
            <TextView
                android:id="@+id/tvTituloConquista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="TÃ­tulo da Conquista"
                android:textColor="@color/text_white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCategoriaConquista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:text="Categoria"
                android:textColor="@color/primary_green"
                android:textSize="14sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/tvDescricaoConquista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="DescriÃ§Ã£o da conquista"
                android:textColor="@color/text_gray"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2" />

            <!-- Pontos Ganhos -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:background="@drawable/badge_raridade_background"
                android:orientation="horizontal"
                android:padding="12dp"
                android:paddingHorizontal="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="6dp"
                    android:src="@drawable/baseline_star_24"
                    app:tint="@color/black" />

                <TextView
                    android:id="@+id/tvPontosConquista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+100 pts"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- BotÃµes Otimizados -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnCompartilhar"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:backgroundTint="@color/primary_green"
                    android:text="Compartilhar"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <Button
                    android:id="@+id/btnFecharConquista"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:backgroundTint="@color/button_gray"
                    android:text="Fechar"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>